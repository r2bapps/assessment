<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/UserListFragment">

    <fragment
        android:id="@+id/UserListFragment"
        android:name="com.r2b.apps.xuser.ui.list.UserListFragment"
        android:label="@string/user_list_fragment_label"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/selectedUserAction"
            app:destination="@id/UserDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/UserDetailFragment"
        android:name="com.r2b.apps.xuser.ui.detail.UserDetailFragment"
        android:label="@string/user_detail_fragment_label"
        tools:layout="@layout/fragment_user_detail">
    </fragment>

</navigation>
